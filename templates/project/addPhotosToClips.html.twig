{% extends 'base.html.twig' %}

{% block title %}{{ project.code }}{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li><a href="{{ path('project_show', project.rp) }}">{{ project.code }} Transcript</a></li>
    <li><a href="{{ path('project_add_photos_to_markers', project.rp) }}">{{ project.code }} Photos</a></li>
{% endblock %}

{#
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/css/add_photos.css') }}" rel="stylesheet">
{% endblock %}
#}

{% block content  %}

    <form>
        <div class="row">
            <div class="col-md-6">
                <h3>Markers</h3>

                {% for marker in markers %}

                    <li>

                        <input name="marker_id" type="radio" value="{{ marker.id }}" {% if marker.id == nextMarkerId %}checked="checked"{% endif %}>
                        {{ marker.note }}

                        {% if marker.bRolls.count %}

                        {% for photo in marker.brolls %}
                        {% set photoUrl = photo.media.publicUrl('') %}

                        <div class="thumbnail" >
                            <a href="{{ photoUrl }}">
                                <img src="{{ photoUrl }}"  style="max-height: 100px; max-width: 200px;" />
                            </a>
                            <div class="caption">
                                {{ marker.note }}
                                <b>
                                    {{ photo.startWord }}
                                </b>
                            </div>
                        </div>

                        {% endfor %}

                        {% else %}
                            {% set photoUrl =  'https://dummyimage.com/600x400/000/fff&text=' ~ marker.media.speaker|default(marker.media.code) %}
                            <div class="thumbnail" >
                                 <img src="{{ photoUrl }}"  style="max-height: 100px; max-width: 200px;" />
                            </div>
                            {% endif %}

                    </li>
                {% endfor %}

            </div>

            <div class="col-md-6">
                <h3>Photos</h3>

                {% for photo in photos %}
                    {% set photoUrl = photo.publicUrl('') %}

                    <div class="thumbnail">

                        <a href="{{ photoUrl }}">
                            <img src="{{ photoUrl }}" style="max-height: 200px; max-width: 300px;" />
                        </a>

                            <div class="caption">

                                <a href="{{ path('media_edit', {entity: 'Media', action: 'edit', id: photo.id}) }}">
                                    <i class="fa fa-pencil"></i>
                                </a>

                                <a class="confirm" href="{{ path('media_hide', photo.rp) }}">
                                    <i class="fa fa-eye-slash"></i>
                                </a>

                                <input name="photo_id" type="radio" value="{{ photo.id }}">

                                {% if photo.bRolls.count %}
                                    <br />{{ photo.bRolls.first.marker.note }}
                                {% endif %}
                                <br />{{ photo.code }}

                            </div>
                    </div>

                {% endfor %}

            </div>
        </div>

        <input name="start_word" placeholder="Starting word" width="64" />
        <input type="submit" value="Add Photo to Soundbite" />
    </form>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.confirm').click(function(){return confirm("are you sure?");});
    </script>
{% endblock %}

