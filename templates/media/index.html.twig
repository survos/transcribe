{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
=
    <table class="table table-striped">
        <thead>

        </thead>
        <tbody>
        {% for m in media %}
            <tr>
                <td><a href="{{ path('media_show', {id: m.id}) }}">{{ m.id }}</a></td>
                <td>{{ m.filename }}</td>
                <td>{{ m.transcriptRequested ? 'T'}}</td>
                <td>{{ m.sentenceCount }}</td>
                <td>{{ (m.fileSize / (1024 * 1024))|number_format(2) }}M</td>
                <td><a href="http://jufj.storage.googleapis.com/{{ m.audioFileName }}">{{ m.audioFileName }}</a></td>
            </tr>

        {% endfor %}

        </tbody>
    </table>

    This friendly message is coming from:
    <ul>
        <li><a href="{{ path('easyadmin') }}">EZ Admin</a></li>
    </ul>
</div>
{% endblock %}
